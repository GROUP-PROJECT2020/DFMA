<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="152dp"
            android:layout_height="99dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/medkit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="@string/health_name"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tag"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/tag" />

            <EditText
                android:id="@+id/e_tag"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="@string/hint_tag" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/condition"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/condition" />

            <EditText
                android:id="@+id/e_condition"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="@string/hint_condition" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout4"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doc_name"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/doctor_name" />

            <EditText
                android:id="@+id/e_doc_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="@string/hint_doctor_name"
                android:layout_marginEnd="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout5"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doc_contact"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="@string/doctor_contact"
                android:layout_marginStart="10dp" />

            <EditText
                android:id="@+id/e_doc_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="@string/hint_doctor_contact"
                android:inputType="phone"
                android:maxLength="10"
                android:autofillHints=""
                android:importantForAutofill="no"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp">

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout6"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/farmer_contact"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="@string/farmer_contact" />

            <EditText
                android:id="@+id/e_farmer_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="@string/hint_farmer_contact"
                android:inputType="phone"
                android:maxLength="10">

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:padding="8sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/edit_button"
                android:id="@+id/save_health"
                android:drawableTop="@drawable/drawable_add1"
                android:background="@color/light"
                android:text="@string/save"
                android:textColor="@color/inverted" />


            <Button
                style="@style/edit_button"
                android:id="@+id/view_health_bt"
                android:drawableTop="@drawable/drawable_view1"
                android:background="@color/light"
                android:text="@string/view_records"
                android:textColor="@color/inverted" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="8sp"
            android:layout_width="fill_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <Button
                style="@style/edit_button"
                android:id="@+id/remind_health"
                android:drawableTop="@drawable/drawable_appointment"
                android:background="@color/light"
                android:text="@string/reminder_appointment"
                android:textColor="@color/inverted" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>