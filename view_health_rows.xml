<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/RelLayout2"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/health_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/health2" />

        <ImageView
            android:id="@+id/bar_icon_1"
            android:layout_width="10dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/health_icon"
            android:src="@drawable/barpink" />

        <TextView
            android:id="@+id/tv_view"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/health_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/Retrieved"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/health_icon"
            android:text="@string/tag"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_tag"
            android:text="@string/tag"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_condition"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tag"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/health_icon"
            android:text="@string/condition"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tag"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_condition"
            android:text="@string/condition"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/condition"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/health_icon"
            android:text="@string/doctor_name"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/condition"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_doctor_name"
            android:text="@string/doctor_name"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_doc_contact"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doc_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/health_icon"
            android:text="@string/doctor_contact"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/doc_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doc_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_doc_contact"
            android:text="@string/doctor_contact"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_farmer_contact"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doc_contact"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/health_icon"
            android:text="@string/farmer_contact"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/farmer_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doc_contact"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_farmer_contact"
            android:text="@string/farmer_contact"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/bar_icon_3"
            android:layout_width="10dp"
            android:layout_height="120dp"
            android:layout_marginLeft="330dp"
            android:layout_toRightOf="@+id/cow_icon"
            android:src="@drawable/barpink" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>