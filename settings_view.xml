<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:visibility="gone">

    <!-- OPTIONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/tutorial_bt"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="#fafafa"
            android:drawableTop="@drawable/drawable_tutorial"
            android:onClick="tutorialOnButtonClick"
            android:text="@string/tutorial"
            android:padding="14dp"
            android:textSize="10sp" />

        <Button
            android:id="@+id/web_bt"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:padding="14dp"
            android:background="#fafafa"
            android:drawableTop="@drawable/drawable_web"
            android:onClick="webOnButtonClick"
            android:text="@string/web"
            android:textSize="10sp" />

        <Button
            android:id="@+id/help_bt"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:padding="14dp"
            android:background="#fafafa"
            android:drawableTop="@drawable/drawable_help"
            android:onClick="helpOnButtonClick"
            android:text="@string/help"
            android:textSize="7sp" />

        <Button
            android:id="@+id/share_bt"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:padding="14dp"
            android:background="#fafafa"
            android:drawableTop="@drawable/drawable_share"
            android:onClick="shareOnButtonClick"
            android:text="@string/share"
            android:textSize="10dp" />

        <Button
            android:id="@+id/theme_bt"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:padding="14dp"
            android:background="#fafafa"
            android:drawableTop="@drawable/drawable_theme"
            android:onClick="switchTheme"
            android:text="@string/theme"
            android:textSize="10dp" />
    </LinearLayout>

</ScrollView>